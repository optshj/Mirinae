{
    "productName": "미리내",
    "appId": "com.mirinae",
    "publish": {
        "provider": "github",
        "owner": "optshj",
        "repo": "Mirinae"
    },
    "asar": true,
    "files": ["out/**/*", "package.json", "!**/node_modules/electron-as-wallpaper/target/release/deps/**", "!node_modules/lucide-react/**", "!node_modules/@tanstack/**"],
    "directories": {
